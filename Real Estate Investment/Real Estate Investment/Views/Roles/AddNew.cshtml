@model  RealEstateInvestment.Models.RoleViewModel
@{
    Layout = null;
}

@using (Html.BeginForm("AddNew", "Roles",  FormMethod.Post, new { onsubmit = "return Submitform(this)", id = "Form" }))
{
    
    <div class="panel panel-primary">
        <div class="panel-heading">
            Role Name
        </div>
        <div class="panel-body">
            <div class="form-group row" >
              
                <div class="col-lg-3">
                    @Html.LabelFor(m => m.Name, "Role Name", new { @class = "control-label" })
                </div>
                <div class="col-lg-3">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
                <div class="col-lg-6">

                </div>

            </div>
            <div class="form-group row" >

                <div class="col-lg-3">
                    @Html.LabelFor(m => m.ApplicationId, "Application", new { @class = "control-label" })
                </div>
                <div class="col-lg-3">
                    @Html.DropDownListFor(m => m.ApplicationId, ViewBag.apps as SelectList ,new { @class = "form-control" })
                </div>
                <div class="col-lg-6">

                </div>

            </div>
            


        </div>
    </div>


    <div class="form-group row">
        <input type="submit" value="Save" class="btn btn-success submit" />
       
    </div>

}

