@model RealEstateInvestment.Areas.RealEstate.Models.UnitContent
@{
    Layout = null;
}
<div class="panel panel-primary">
    <div class="panel-heading">
        حذف مركز
    </div>
    <div class="panel-body">
        <h3>هل انت متأكد من انك تريد حذف هذا المحتوى؟</h3>
        <div>
            <table>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id) : &nbsp; &nbsp;
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.Id)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ContentType.ContentName) : &nbsp; &nbsp;
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.ContentType.ContentName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ContentMeters) : &nbsp; &nbsp;
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.ContentMeters)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ContentCount) : &nbsp; &nbsp;
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.ContentCount)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ContentDetail) : &nbsp; &nbsp;
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.ContentDetail)
                    </td>
                </tr>
            </table>

            @using (Html.BeginForm("DeleteUnitContent", "Units", FormMethod.Post, new { id = "popupForm" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="حذف" class="btn btn-danger" />
                </div>
            }
        </div>
    </div>
</div>