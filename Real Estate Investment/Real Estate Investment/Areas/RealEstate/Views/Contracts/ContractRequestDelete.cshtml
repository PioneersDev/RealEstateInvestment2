@model RealEstateInvestment.Areas.RealEstate.Models.DTO.ContractRequests
@{
    Layout = null;
}
<div class="panel panel-primary">
    <div class="panel-heading">
        حذف طلب
    </div>
    <div class="panel-body">
        <h3>هل انت متأكد من انك تريد حذف هذا الطلب؟</h3>
        <div>
            <table>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id) : &nbsp; &nbsp;
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.Id)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProjectId) : &nbsp; &nbsp;
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.ProjectName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UnitId) : &nbsp; &nbsp;
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.UnitName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerId) : &nbsp; &nbsp;
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.CustomerName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ContractDate) : &nbsp; &nbsp;
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.ContractDate)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PaymentMethodHeaderId) : &nbsp; &nbsp;
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.PaymentMethodHeaderName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ContractTypeId) : &nbsp; &nbsp;
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.ContractTypeName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ContractModelId) : &nbsp; &nbsp;
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.ContractModelName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UnitTotalValue) : &nbsp; &nbsp;
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.UnitTotalValue)
                    </td>
                </tr>
                @if (Model.MarketingCompanyId != null)
                {
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.MarketingCompanyId) : &nbsp; &nbsp;
                        </th>

                        <td>
                            @Html.DisplayFor(model => model.MarketingCompanyName)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.MarketingCompanyPayValue) : &nbsp; &nbsp;
                        </th>

                        <td>
                            @Html.DisplayFor(model => model.MarketingCompanyPayValue)
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.MarketingCompanyId) : &nbsp; &nbsp;
                        </th>

                        <td>
                            لم يتم تحديد شركة تسويق
                        </td>
                    </tr>
                }
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DocHeaderId) : &nbsp; &nbsp;
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.DocHeaderId)
                    </td>
                </tr>
            </table>

            @using (Html.BeginForm("ContractRequestDelete", "Contracts", FormMethod.Post, new { id = "popupForm" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="حذف" class="btn btn-danger" />
                </div>
            }
        </div>
    </div>
</div>
