                @Html.DisplayFor(model => model.MainUnitId)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UnitNo) : &nbsp; &nbsp;
            </th>

            <td>
                @Html.DisplayFor(model => model.UnitNo)
            </td>
        </tr>
    </table>

    @using (Html.BeginForm("DeleteUnit", "Units", FormMethod.Post, new { id = "popupForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-danger" />
        </div>
    }
</div>
<script>
    $(function () {
        $('#popupForm').submit(function (e) {
            $(':input[type="submit"]').prop('disabled', true);
        });
    });
</script>
