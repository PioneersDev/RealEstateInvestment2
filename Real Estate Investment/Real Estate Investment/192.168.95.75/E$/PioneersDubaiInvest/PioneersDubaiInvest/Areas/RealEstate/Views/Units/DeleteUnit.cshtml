            <td>
                @Html.DisplayFor(model => model.UnitName)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectUnitType.ProjectUnitTypeName) : &nbsp; &nbsp;
            </th>

            <td>
                @Html.DisplayFor(model => model.ProjectUnitType.ProjectUnitTypeName)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TotalMeters) : &nbsp; &nbsp;
