            <td>
                @Html.DisplayFor(model => model.TotalPrice)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MeterPrice) : &nbsp; &nbsp;
            </th>

            <td>
                @Html.DisplayFor(model => model.MeterPrice)
